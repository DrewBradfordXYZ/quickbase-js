{
  "name": "quickbase-js",
  "version": "2.1.0",
  "description": "TypeScript/JavaScript client for the QuickBase JSON RESTful API",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/quickbase.min.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "browser": "./dist/quickbase.min.js"
    }
  },
  "bin": {
    "quickbase-js": "./bin/quickbase-js.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/build-browser.js",
    "build:node": "tsc",
    "build:browser": "node scripts/build-browser.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run tests/unit",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "typecheck": "tsc --noEmit",
    "spec:convert": "tsx spec/tools/cli.ts convert",
    "spec:patch": "tsx spec/tools/cli.ts patch",
    "spec:validate": "tsx spec/tools/cli.ts validate",
    "spec:split": "tsx spec/tools/cli.ts split",
    "spec:generate": "tsx scripts/spec/generate.ts",
    "spec:build": "npm run spec:convert && npm run spec:patch && npm run spec:validate && npm run spec:generate",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "quickbase",
    "api",
    "client",
    "sdk",
    "rest",
    "typescript"
  ],
  "author": "Drew Bradford",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DrewBradfordXYZ/quickbase-js.git"
  },
  "bugs": {
    "url": "https://github.com/DrewBradfordXYZ/quickbase-js/issues"
  },
  "homepage": "https://github.com/DrewBradfordXYZ/quickbase-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0",
    "yaml": "^2.4.0"
  }
}
