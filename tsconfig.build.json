{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/temp",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": true,
    "noEmitOnError": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "."
  },
  "include": ["dist/temp-src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*", "src/**/*"]
}
