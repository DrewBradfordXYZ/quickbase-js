{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/temp",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["dist/temp-src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "src/**/*" // Exclude original src/ to avoid confusion
  ]
}