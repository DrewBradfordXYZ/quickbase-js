{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": false, // Changed to false for Rollup to emit
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true, // Rollup needs this for .d.ts files
    "sourceMap": true // Matches Rollupâ€™s sourcemap option
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/generated-old"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}