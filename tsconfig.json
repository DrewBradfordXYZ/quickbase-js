{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "lib": ["ES2015", "ESNext", "DOM"],
    "types": ["node", "playwright/test", "undici-types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "open-api/**/*", "tools/**/*"],
  "exclude": ["node_modules", "dist", "specs"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}