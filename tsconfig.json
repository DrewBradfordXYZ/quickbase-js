{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true // Required for allowImportingTsExtensions
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/generated-old"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
